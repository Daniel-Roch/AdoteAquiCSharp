@page "/Contato"
@model ContactModel

<header class="bg-primary text-white text-center py-5">
    <h1>Entre em contato</h1>
</header>

<form method="post">
    <legend>Cadastro</legend>
    <div class="form-group">
        <label asp-for="clientAdoption.Email" class="form-label mt-4"></label>
        <input asp-for="clientAdoption.Email" class="form-control"/>
        <span asp-validation-for="clientAdoption.Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="clientAdoption.Name" class="form-label mt-4"></label>
        <input asp-for="clientAdoption.Name" class="form-control" />
    <span asp-validation-for="clientAdoption.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="clientAdoption.DateBirth" class="form-label mt-4"></label>
        <input asp-for="clientAdoption.DateBirth" class="form-control" />
        <span asp-validation-for="clientAdoption.DateBirth" class="text-danger"></span>
    </div>
    <div class="form-group mb-2">
        <label asp-for="clientAdoption.Descript" class="form-label mt-4">Conte sobre como conheceu a gente: </label>
        <textarea asp-for="clientAdoption.Descript" class="form-control" id="descript" rows="3"></textarea>
        <span asp-validation-for="clientAdoption.Descript" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
