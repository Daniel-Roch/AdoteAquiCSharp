@page "/Cadastro"
@model RegisterModel
@{
}

<header class="bg-primary text-white text-center py-5">
    <h1>Cadastro</h1>
</header>

<form method="post">
    <legend>Cadastro</legend>

    <div class="form-group">
        <label asp-for="animal.Name" class="form-label mt-4"></label>
        <input asp-for="animal.Name" class="form-control" />
        <span asp-validation-for="animal.Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="animal.Andress" class="form-label mt-4"></label>
        <input asp-for="animal.Andress" class="form-control" />
        <span asp-validation-for="animal.Andress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="animal.Img" class="form-label mt-4"></label>
        <input asp-for="animal.Img" class="form-control" />
        <span asp-validation-for="animal.Img" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="animal.Url" class="form-label mt-4"></label>
        <input asp-for="animal.Url" class="form-control" />
        <span asp-validation-for="animal.Url" class="text-danger"></span>
    </div>

    <div class="form-group mb-2">
        <label asp-for="animal.Description" class="form-label mt-4">Conte sobre como conheceu a gente: </label>
        <textarea asp-for="animal.Description" class="form-control" id="descript" rows="3"></textarea>
        <span asp-validation-for="animal.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="animal.BreedId" for="exampleSelect1" class="form-label mt-4" />
        <select class="form-select" asp-for="animal.BreedId" asp-items="Model.BreedOptions">
            <option value="">Selecione uma opção</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
